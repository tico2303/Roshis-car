<?xml version="1.0"?>
<robot name="daro_min">

  <!-- Daros body simple box -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.0254" rpy="0 0 0"/>
      <geometry>
        <!-- x=length, y=width, z=height (meters) -->
        <box size="0.2413 0.0762 0.0508"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>

    <!-- collision same as visual -->
    <collision>
      <origin xyz="0 0 0.0254" rpy="0 0 0"/>
      <geometry>
        <box size="0.2413 0.0762 0.0508"/>
      </geometry>
    </collision>

    <!--TODO mass/inertia -->
  </link>

  <!-- LiDAR frame -->
  <link name="laser"/>

  <!-- Fixed mount of lidar relative to base_link -->
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <!-- temp lidar position; fix later -->
    <origin xyz="0.08 0 0.10" rpy="0 0 0"/>
  </joint>

</robot>